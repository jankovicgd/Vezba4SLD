                <FeatureTypeStyle>
                    <Rule>
                        <Name>rule1</Name>
                        <Title>Jezero plave boje</Title>
                        <Abstract>Jezero plave boje</Abstract>
                        <PolygonSymbolizer>
                            <Fill>
                                <CssParameter name="fill">#0000ff</CssParameter>
